<h1>Edit Task</h1>

<%= bootstrap_form_with model: @task, method: :patch, url: update_task_path(@task), local: true do |f| %>

  <%= f.text_field :name %>
  <%= f.text_field :description %>
  <%= f.text_field :estimated_work %>
  <%= f.text_field :due_date %>
  <%= f.submit %>

<% end %>

<p class="mt-3">
  <%= link_to 'Cancel', show_category_path(@task.category), class: 'btn btn-primary' %>
</p>

