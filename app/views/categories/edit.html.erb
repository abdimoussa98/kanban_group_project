<h1>Edit Category</h1>

<%= bootstrap_form_with model: @category, method: :patch, url: update_category_path(@project, @board, @category), local: true do |f| %>

  <%= f.text_field :name %>
  <%= f.submit %>

<% end %>

<p class="mt-3">
  <%= link_to 'Cancel', board_path(@project, @board), class: 'btn btn-primary' %>
</p>