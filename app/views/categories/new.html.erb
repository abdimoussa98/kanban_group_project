<h1>New Category</h1>

<%= bootstrap_form_with model: @category, method: :post, url: create_category_path(@project, @board), local: true do |f| %>

  <%= f.text_field :name %>
  <%= f.submit %>

<% end %>

<p class="mt-3">
  <%= link_to 'Cancel', board_path(@project, @board), class: 'btn btn-primary' %>
</p>

